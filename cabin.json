{
  "style": [
    "Sass"
  ],
  "template": [
    "Jade",
    "EJS"
  ],
  "gruntPagesVersion": "~0.4.1",
  "gruntPages": {
    "options": {
      "pageSrc": "src/pages"
    },
    "posts": {
      "src": "posts",
      "dest": "dist",
      "layout": "src/layouts/post.<%= templateLang %>",
      "url": "blog/posts/:title.html",
      "options": {
        "pagination": {
          "postsPerPage": 3,
          "listPage": "src/pages/index.<%= templateLang %>"
        }
      }
    }
  }
}
