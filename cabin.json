{
  "style": [
    "Sass"
  ],
  "template": [
    "Jade",
    "EJS"
  ],
  "CSSPreprocessor": [
    "Sass"
  ],
  "templateEngine": [
    "Jade",
    "EJS"
  ],
  "gruntPagesVersion": "~0.4.1",
  "gruntPages": {
    "options": {
      "pageSrc": "src/pages",
      "data": {
        "baseUrl": "/"
      }
    },
    "posts": {
      "src": "posts",
      "dest": "dist",
      "layout": "src/layouts/post.<%= templateLang %>",
      "url": "blog/posts/:title/",
      "options": {
        "pagination": {
          "postsPerPage": 3,
          "listPage": "src/pages/index.<%= templateLang %>"
        }
      }
    }
  },
  "gruntPagesConfig": {
    "options": {
      "pageSrc": "src/pages",
      "data": {
        "baseUrl": "/"
      }
    },
    "posts": {
      "src": "posts",
      "dest": "dist",
      "layout": "src/layouts/post.<%= templateEngine %>",
      "url": "blog/posts/:title/",
      "options": {
        "pagination": {
          "postsPerPage": 3,
          "listPage": "src/pages/index.<%= templateEngine %>"
        }
      }
    }
  }
}
