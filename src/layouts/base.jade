//- Mixin for post, used on homepage and post page
mixin postHead(post)
  .post-head.group
    a(href="#{post.url}")
      h1.post-title= post.title
    span.post-date!= [post.date.getUTCFullYear(), post.date.getUTCMonth() + 1, post.date.getUTCDate()].join(' &#183; ')

mixin post(post)
  mixin postHead(post)
  .post-body!= post.content

