extends ../layouts/base

block content
  each post in posts
    mixin post(post)
    div.comments
      a(href="#{post.url}#comments")
        span.icon-bubbles
        | Comments

  ul.pagination.group
    - for (var i = 0; i < pages.length; i++) {
      - var page = pages[i];
      - if (i === currentIndex - 1) {
        li.newer
          a(href="#{page.url}") Newer &#8594;
      - } else if (i === currentIndex + 1) {
        li.older
          a.active-page(href="#{page.url}") &#8592; Older
      - }
    - }
