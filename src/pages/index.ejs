<% include ../layouts/_header %>
<% posts.forEach(function(post){ %>
  <% include ../layouts/_post %>
  <div class="comments">
    <a href="<%= data.baseUrl %><%= post.url %>#comments">
      <span class="icon-bubbles"></span>
      Comments
    </a>
  </div>
<% }) %>

<div class="pagination group">
  <% for (var i = 0; i < pages.length; i++) { %>
    <% var page = pages[i] %>
    <% if (i === currentIndex - 1) { %>
      <span class="newer">
        <a href="<%= data.baseUrl %><%= page.url %>"> Newer &#8594;</a>
      </span>
    <% } else if (i === currentIndex + 1) { %>
      <span class="older">
        <a href="<%= data.baseUrl %><%= page.url %>" class="active-page"> &#8592; Older</a>
      </span>
    <% } %>
  <% } %>
</div>
<% include ../layouts/_footer %>
