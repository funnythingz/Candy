<% include ../layouts/_header %>
<% posts.forEach(function(post){ %>
  <% include ../layouts/_post %>
  <h2>
    <a href="/<%= post.url %>#comments">View comments</a>
  </h2>
<% }) %>

<ul class="pagination group">
  <% if (pages.length > 1) {
      for (var i = currentIndex - 3; i < currentIndex + 3; i++) {
        var page = pages[i];
        if (page) {%>
        <li>
          <% if (i === currentIndex) { %>
            <a class="active-page" href="<%= page.url %>" ><%= i + 1 %></a>
          <% } else { %>
            <a href="<%= page.url %>"><%= i + 1 %></a>
          <% } %>
        </li>
      <% } %>
    <% } %>
  <% } %>
</ul>
<% include ../layouts/_footer %>
