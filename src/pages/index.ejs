<% include ../layouts/_header %>
<% posts.forEach(function(post){ %>
  <% include ../layouts/_post %>
  <div class="comments">
    <a href="<%= data.baseUrl %><%= post.url %>#comments">
      <span class="icon-bubbles"></span>
      Comments
    </a>
  </div>
<% }) %>

<ul class="pagination group">
  <% if (pages.length > 1) {
      for (var i = currentIndex - 3; i < currentIndex + 3; i++) {
        var page = pages[i];
        if (page) {%>
        <li>
          <% if (i === currentIndex) { %>
            <a class="active-page" href="<%= data.baseUrl %><%= page.url %>" ><%= i + 1 %></a>
          <% } else { %>
            <a href="<%= data.baseUrl %><%= page.url %>"><%= i + 1 %></a>
          <% } %>
        </li>
      <% } %>
    <% } %>
  <% } %>
</ul>
<% include ../layouts/_footer %>
